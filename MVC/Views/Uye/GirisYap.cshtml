<body>
    <div class="container-fluid">
        <div id="body-container">
            <div class="standalone-page">
                
                <div class="standalone-page-content" data-border-top="multi">
                    <div class="standalone-page-block">
                        <div class="row">
                            <div class="col-xs-12">
                                <h2 class="heading">
                                    <span aria-hidden="true" class="icon icon-key"></span>
                                    <span class="main-text">
                                        Giriş Yapınız.
                                    </span>
                                </h2>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <form role="form" class="login-form form-horizontal" method="post" action="/Uye/GirisYap">
                                    <div class="form-group">
                                        <label for="inputEmail" class="col-sm-3 control-label">Kullanıcı Adı</label>
                                        <div class="col-sm-9">
                                            <input autocomplete="off" class="form-control" id="inputEmail" placeholder="Kullanıcı Adı Giriniz" type="text" name="KullaniciAdi">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputPassword" class="col-sm-3 control-label">Şifre</label>
                                        <div class="col-sm-9">
                                            <input autocomplete="off" class="form-control" id="inputPassword" placeholder="Şifre Giriniz" type="password" name="Sifre">
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <div class="col-sm-offset-3 col-sm-9">
                                            <button type="submit" class="btn btn-success">Giriş Yap</button>
                                            <a href="/Uye/SifremiUnuttum" class="btn btn-link btn-sm pull-right">Şifremi Unuttum</a>

                                        </div>
                                    </div>
                                   

                                </form>
                                 @if (ViewBag.Mesaj != null)
                                 {
                                      <p style="color:red">@ViewBag.Mesaj</p>  
                                 }
                                 </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="change-section">
                                        <h3 class="heading">Henüz Kayıt Olmadınız mı?</h3>
                                        <a href="/Kullanici/Ekle" class="btn btn-default btn-block">Kayıt Ol</a>
                                    </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
